{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "format": {
            "cache": false
        },
        "format:check": {
            "inputs": [
                "**/*.{ts,tsx,js,jsx,cjs,json,css,md}",
                ".prettierrc*",
                "prettier.config.*"
            ],
            "outputs": []
        }
    }
}
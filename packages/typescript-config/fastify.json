{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Fastify",
    "extends": "./base.json",
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
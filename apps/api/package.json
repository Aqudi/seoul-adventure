{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "TSX_TSCONFIG_PATH=../../tsconfig.json tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs --dts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "db:schema:create": "tsx src/scripts/schema-create.ts",
    "db:schema:update": "tsx src/scripts/schema-update.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/multipart": "^9.0.0",
    "@fastify/static": "^8.0.0",
    "@mikro-orm/core": "^6.4.4",
    "@mikro-orm/migrations": "^6.4.4",
    "@mikro-orm/postgresql": "^6.4.4",
    "@seoul-advanture/database": "workspace:*",
    "@seoul-advanture/schemas": "workspace:^",
    "bcryptjs": "^2.4.3",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.0.0",
    "jose": "^6.1.3",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@seoul-advanture/eslint-config": "workspace:*",
    "@seoul-advanture/prettier-config": "workspace:*",
    "@seoul-advanture/typescript-config": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.35",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
